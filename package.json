{
  "name": "clober-solidity-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "fork": "npx hardhat node",
    "compile": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "coverage:hardhat": "npx hardhat coverage",
    "coverage:forge": "forge coverage --report lcov",
    "test:hardhat": "npx hardhat test",
    "test:forge": "forge test",
    "precommit": "pre-commit install",
    "prettier:ts": "prettier --list-different \"{,!(node_modules)/**/}*.ts\"",
    "prettier:fix:ts": "prettier --write \"{,!(node_modules)/**/}*.ts\"",
    "lint:sol": "solhint -q 'contracts/**/*.sol' && prettier --list-different contracts/**/*.sol",
    "lint:fix:sol": "prettier --write 'contracts/**/*.sol' && solhint 'contracts/**/*.sol' --fix",
    "deployments:update": "ts-node ./scripts/deployments.ts && ts-node ./scripts/deployments.typechain.ts",
    "postinstall": "forge install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clober-dex/clober-solidity-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.1",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.15",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-log-remover": "^2.0.2",
    "keythereum": "^1.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "readline-sync": "^1.4.10",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
